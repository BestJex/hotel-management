<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.altersoftware.hotel.dao.PermissionUserDAO">
    <resultMap type="com.altersoftware.hotel.entity.PermissionUserDO" id="PermissionUserDO">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="user_id" property="userId"/>
        <result column="permission_id" property="permissionId"/>
        <result column="create_time" property="createTime"/>
        <result column="modify_time" property="modifyTime"/>
    </resultMap>
    <!--插入用户权限信息	-->
    <insert id="insert" parameterType="com.altersoftware.hotel.entity.PermissionUserDO">
        <selectKey keyProperty="id" order="AFTER" resultType="long">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO tb_permission_user(
        user_id,
        permission_id,
        create_time,
        modify_time
        )VALUES(
        #{userId},
        #{permissionId},
        NOW(),
        NOW()
        );
    </insert>
    <!--id查询权限	-->
    <select id="getPermissionUserDOById" parameterType="long" resultMap="PermissionUserDO">
		SELECT
			id,
			user_id,
			permission_id,
			create_time,
			modify_time
		FROM tb_permission_user WHERE
			id = #{id}
	</select>
    <!--更新用户权限	-->
    <update id="update" parameterType="com.altersoftware.hotel.entity.PermissionUserDO">
		UPDATE tb_permission_user
		SET user_id=#{userId},
			permission_id=#{permissionId},
			modify_time=NOW()
		WHERE id=#{id}
	</update>
    <!--id删除用户权限	-->
    <delete id="deleteById" parameterType="long">
		DELETE FROM
		tb_permission_user
		WHERE id=#{id}
	</delete>
    <!--用户id返回权限id	-->
    <select id="getPermissionIdByUserId" parameterType="long" resultType="long">
		SELECT
			permission_id
		FROM tb_permission_user WHERE
			user_id=#{userId}
	</select>
    <!--用户id和权限id查询表中该条记录	-->
    <select id="getPermissionUserDOIdByBothId" parameterType="long" resultMap="PermissionUserDO">
		SELECT
			id,
			user_id,
			permission_id,
			create_time,
			modify_time
		FROM tb_permission_user WHERE
			user_id = #{userId} and permission_id = #{permissionId}
	</select>

</mapper>