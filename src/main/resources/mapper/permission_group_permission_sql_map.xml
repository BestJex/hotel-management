<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.altersoftware.hotel.dao.PermissionGroupPermissionDAO">
	<resultMap type="com.altersoftware.hotel.entity.PermissionGroupPermissionDO" id="PermissionGroupPermissionDO">
		<id column="id" property="id" jdbcType="BIGINT"/>
		<result column="perimission_group_id" property="permissionGroupId"/>
		<result column="permission_id" property="permissionId"/>
		<result column="create_time" property="createTime"/>
		<result column="modify_time" property="modifyTime"/>
	</resultMap>
<!--	插入权限组权限信息-->
	<insert id="insert" parameterType="com.altersoftware.hotel.entity.PermissionGroupPermissionDO">
		<selectKey keyProperty="id" order="AFTER" resultType="long">
			SELECT LAST_INSERT_ID()
		</selectKey>
		INSERT INTO tb_permission_group_permission(
			permission_group_id,
			permission_id,
			create_time,
			modify_time
		)VALUES(
			#{permissionGroupId},
			#{permissionId},
			NOW(),
			NOW()
		);
	</insert>
<!--	id查询权限组及权限-->
	<select id="getPermissionGroupPermissionDOById" parameterType="long" resultMap="PermissionGroupPermissionDO">
		SELECT
			id,
			permission_group_id,
			permission_id,
			create_time,
			modify_time
		FROM tb_permission_group_permission WHERE
			id=#{id}
	</select>
<!--	更新权限组权限-->
	<update id="update" parameterType="com.altersoftware.hotel.entity.PermissionGroupPermissionDO">
		UPDATE tb_permission_group_permission
		SET permission_group_id=#{permissionGroupId},
			permission_id=#{permissionId},
			modify_time=NOW()
		WHERE id=#{id}
	</update>
<!--	id删除权限组及权限-->
	<delete id="deleteById" parameterType="long">
		DELETE FROM
		tb_permission_group_permission
		WHERE id=#{id}
	</delete>
<!--	权限组id返回权限id-->
	<select id="getPermissionIdByPermissionGroupId" parameterType="long" resultType="long">
		SELECT
			permission_id
		FROM tb_permission_group_permission WHERE
			permission_group_id=#{permissionGroupId}
	</select>
<!--	根据权限组id删除某一组权限-->
	<delete id="deletePermissionsByPermissionGroupId" parameterType="long">
		DELETE FROM
		tb_permission_group_permission
		WHERE permission_group_id=#{permissionGroupId}
	</delete>
</mapper>