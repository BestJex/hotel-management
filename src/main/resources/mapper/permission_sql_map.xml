<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.altersoftware.hotel.dao.PermissionDAO">
	<resultMap type="com.altersoftware.hotel.entity.PermissionDO" id="PermissionDO">
		<id column="id" property="id" jdbcType="BIGINT"/>
		<result column="name" property="name"/>
		<result column="create_time" property="createTime"/>
		<result column="modify_time" property="modifyTime"/>
		<result column="resource" property="resource"/>
	</resultMap>
<!--插入一个权限	-->
	<insert id="insert" parameterType="com.altersoftware.hotel.entity.PermissionDO">
		<selectKey keyProperty="id" order="AFTER" resultType="long">
			SELECT LAST_INSERT_ID()
		</selectKey>
		INSERT INTO tb_permission(
			name,
			create_time,
			modify_time,
			resource
		)VALUES(
			#{name},
			NOW(),
			NOW(),
			#{resource}
		);
	</insert>
<!--权限id查找权限	-->
	<select id="getPermissionDOById" parameterType="long" resultMap="PermissionDO">
		SELECT
			id,
			name,
			create_time,
			modify_time,
			resource
		FROM tb_permission WHERE
			id = #{id}
	</select>
<!--权限name查找权限-->
	<select id="getPermissionDOByName" parameterType="String" resultMap="PermissionDO">
		SELECT
			id,
			name,
			create_time,
			modify_time,
			resource
		FROM tb_permission WHERE
			name = #{name}
	</select>
<!--更新权限	-->
	<update id="update" parameterType="com.altersoftware.hotel.entity.PermissionDO">
		UPDATE tb_permission
		SET name=#{name},
			modify_time=NOW(),
			resource=#{resource}
		WHERE id=#{id}
	</update>
<!-- id删除权限	-->
	<delete id="deleteById" parameterType="long">
		DELETE FROM
		tb_permission
		WHERE id=#{id}
	</delete>
<!--展示所用权限	-->
	<select id="showAllPermissions" resultMap="PermissionDO">
		SELECT *
		FROM tb_permission
	</select>
	
</mapper>