<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.altersoftware.hotel.dao.NewsDAO">
    <resultMap type="com.altersoftware.hotel.entity.NewsDO" id="NewsDO">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <result column="create_time" property="createTime"/>
        <result column="modify_time" property="modifyTime"/>
    </resultMap>
    <!--	插入一条消息-->
    <insert id="insert" parameterType="com.altersoftware.hotel.entity.NewsDO">
        <selectKey keyProperty="id" order="AFTER" resultType="long">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO tb_news(
        title,
        content,
        create_time,
        modify_time
        ) VALUES(
        #{title},
        #{content},
        NOW(),
        NOW()
        );
    </insert>
    <!--	id查找消息-->
    <select id="getNewsDOById" parameterType="long" resultMap="NewsDO">
		SELECT
			id,
			title,
			content,
			create_time,
			modify_time
		FROM tb_news WHERE 
			id=#{id}
	</select>
    <!--	更新消息-->
    <update id="update" parameterType="com.altersoftware.hotel.entity.NewsDO">
		UPDATE tb_news
			SET title=#{title},
				content=#{content},
				modify_time=NOW()
			WHERE
				id=#{id}
	</update>
    <!--	根据id删除一条消息-->
    <delete id="deleteById" parameterType="long">
		DELETE FROM 
		tb_news
		WHERE id=#{id}
	</delete>
</mapper>